{
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./util/**/*",
    "./*",
    "./__mocks__/**/*",
    ".eslintrc.js"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "strict": true,
    "esModuleInterop": true,
    "noEmit": true,
    "jsx": "react",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  }
}
