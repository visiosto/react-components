{
  "name": "@visiosto/react-components",
  "version": "0.11.0-dev",
  "description": "Components powering the development of the Visiosto React web applications",
  "main": "lib/index.js",
  "module": "lib-esm/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "npm-run-all clean bundle compile type-check copy-type-declarations",
    "bundle": "cross-env NODE_ENV=production rollup -c",
    "compile": "cross-env BABEL_MODULE=commonjs babel src --out-dir lib --extensions \".js,.ts,.jsx,.tsx\" && babel src --out-dir lib-esm --extensions \".js,.ts,.jsx,.tsx\"",
    "copy-type-declarations": "copyfiles -u 1 \"./lib/**/*.d.ts\" ./lib-esm",
    "check-all": "npm-run-all format --parallel lint:js lint:css",
    "ci-check": "npm-run-all nit --parallel lint:js lint:css",
    "format": "prettier --config .prettierrc.json --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "nit": "prettier --config .prettierrc.json --list-different \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "jest",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:css": "stylelint './src/**/*{.js,.jsx,.ts,.tsx}'",
    "type-check": "tsc --project tsconfig.build.json",
    "clean": "rm -rf dist && rm -rf lib && rm -rf lib-esm",
    "start": "echo \"Running the package isn't supported\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/visiosto/react-components.git"
  },
  "keywords": [
    "react",
    "components",
    "library"
  ],
  "files": [
    "dist",
    "lib",
    "lib-esm",
    "index.d.ts",
    "!lib/__tests__",
    "!lib/stories",
    "!lib/util/__tests__",
    "!lib/util/test",
    "!lib-esm/__tests__",
    "!lib-esm/stories",
    "!lib-esm/util/__tests__",
    "!lib-esm/util/test"
  ],
  "author": "Antti Kivi <antti.kivi@visiosto.fi>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/visiosto/react-components/issues"
  },
  "homepage": "https://github.com/visiosto/react-components#readme",
  "dependencies": {
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^17.0.9",
    "@types/prop-types": "^15.7.4",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-preval": "^5.0.0",
    "babel-plugin-transform-replace-expressions": "^0.2.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^19.0.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.59.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.5.2",
    "stylelint": "^14.0.1",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "^4.4.4"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  }
}
